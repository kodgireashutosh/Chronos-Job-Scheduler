generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  apiKey    String   @unique
  createdAt DateTime @default(now())
  jobs      Job[]
}

model Setting {
  id           String   @id @default(uuid())
  smtpHost     String
  smtpPort     Int
  smtpUser     String
  smtpPassword String
  smtpFrom     String
  retryBaseSec Int      @default(5)
  retryMaxSec  Int      @default(300)
  createdAt    DateTime @default(now())
}

model Job {
  id            String         @id @default(uuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id])
  name          String
  jobType       JobType
  scheduleType  ScheduleType
  cron          String?
  runAt         DateTime?
  nextRunAt     DateTime
  status        JobStatus      @default(PENDING)
  retries       Int            @default(0)
  maxRetries    Int            @default(3)
  webhookUrl    String?
  webhookMethod String?
  emailTo       String?
  emailSubject  String?
  emailBody     String?
  createdAt     DateTime       @default(now())
  executions    JobExecution[]
}

model JobExecution {
  id        String          @id @default(uuid())
  jobId     String
  job       Job             @relation(fields: [jobId], references: [id])
  status    ExecutionStatus
  startedAt DateTime
  endedAt   DateTime?
  output    String?
  attempt   Int
  createdAt DateTime        @default(now())
}

enum JobType {
  EMAIL
  WEBHOOK
}

enum ScheduleType {
  ONCE
  CRON
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum ExecutionStatus {
  SUCCESS
  FAILURE
}

enum UserRole {
  ADMIN
  USER
}
